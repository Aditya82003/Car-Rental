generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RoleType {
  ADMIN
  CUSTOMER
  DRIVER
}

enum RentalStatus {
  BOOKED
  CANCELLED
  COMPLETED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

enum PaymentMethod {
  CARD
  CASH
  UPI
}

enum PermissionType {
  ADD_CAR
  DELETE_CAR
  EDIT_CAR
  VIEW_ALL_CARS
  VIEW_AVAILABLE_CARS
  VIEW_ALL_BOOKING
  ADD_BOOKING
  DELETE_BOOKING
  EDIT_BOOKING
  MANGAGE_PAYMENT
}

enum Provider {
  GOOGLE
  EMAIL
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  password       String?
  profilePicture String?
  phone          String?
  role           RoleType @default(CUSTOMER)

  rentals    Rental[]
  drivenCars Car[]    @relation("carDriver")
  AccountProvider AccountProvider[]

  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
}

model Car {
  id            String  @id @default(uuid())
  name          String
  brand         String
  licensePlate String  @unique
  fuelType      String?
  seats         Int?
  meterReading  Float?
  priceperday   Float
  imageUrl      String?
  available     Boolean @default(true)

  driverId String?
  driver   User?   @relation("carDriver", fields: [driverId], references: [id])

  latitude  Float?
  longitude Float?

  rentals Rental[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Rental {
  id         String       @id @default(uuid())
  userId     String
  carId      String
  startDate  DateTime
  endDate    DateTime
  totalPrice Float?
  status     RentalStatus @default(BOOKED)

  pickupLat      Float?
  pickupLng      Float?
  dropoffLat     Float?
  dropoffLng     Float?
  pickupAddress  String?
  dropoffAddress String?

  car     Car      @relation(fields: [carId], references: [id])
  user    User     @relation(fields: [userId], references: [id])
  payment Payment?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Payment {
  id            String        @id @default(uuid())
  rentalId      String        @unique
  amount        Float
  method        PaymentMethod
  status        PaymentStatus
  transactionId String        @unique
  rental        Rental        @relation(fields: [rentalId], references: [id])

  createdAt DateTime @default(now())
}

model AccountProvider {
  id String @id @default(uuid())

  provider   Provider
  providerId String   @unique

  userId String
  user   User   @relation(fields: [userId], references: [id])

  refreshToken String?
  tokenExpire  DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
